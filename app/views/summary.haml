- summary = Instabil::SummaryPresenter.new(Person.all)
- results, totals = summary.run

#summary
  %h1 Redaktionsübersicht
  #progress
    Fortschritt
    %span== #{((totals.sum.to_f / summary.data_point_count.to_f)*100).to_i}%
  
  %p== Gewünschte Gesamtzahl an Benutzern: 149

  %table
    %tr
      %th Name
      %th Angemeldet
      %th
        Bericht
        %span eingetragen
      %th
        Bericht
        %span korrigiert
      %th Metadaten
      %th mind. 5 Tags
      %th Foto
      %th Endabnahme

    - results.each do |r|
      - p, result = r
      %tr[p]
        %td.name= p.name
        - result.each_with_index do |step_result, i|
          %td{ :class => summary.steps[i][:name].to_s+' '+(step_result ? 'ok' : 'fail')}
        

    %tr.footer
      %td
      - totals.each do |t|
        %td= t

  %p== Moderatoren: #{Person.moderator_uids.map{|uid| Person.find(uid).name }.join(', ')}